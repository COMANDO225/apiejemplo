// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_MASNA_PE_CAUSA")
}

model Propiedad {
  id                     String    @id @default(auto()) @map("_id") @db.ObjectId
  nombre                 String
  direccion              String
  ciudad                 String
  pais                   String
  precioPorNoche         Int
  moneda                 String
  capacidad              Int?
  habitaciones           String?
  banos                  String?
  amenidades             String[]
  calificacion           Float?
  numeroDeCalificaciones Int?
  imagenes               String[]
  date                   DateTime?
  descripcion            String?
  anfitrion              String
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  @@map("propiedades_masna")
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}
