generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_MASNA_PE_CAUSA")
}

model Propiedad {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre       String
  direccion    String
  ciudad       String
  pais         String
  precio       Float
  moneda       String
  calificacion Float
  imagen       String
  date         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("propiedades_masna")
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}
